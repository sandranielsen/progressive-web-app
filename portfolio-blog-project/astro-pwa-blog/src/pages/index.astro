---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'My Astro Blog';
const description = 'The perfect starter for your perfect blog.';
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <img alt='Headshot of Sandra Mago' src='/assets/header.jpg'>
    <div class="home-copy">
      <h1>Hey there,</h1>
      <p>My name is Sandra Mago and I am a multimedia design student based in Aarhus. 
      I am a half danish and half filipino (hence the unique last name) aspiring front-end 
      developer and visual designer.</p>
    </div>

  </div>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 3em;
  }

  h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    position: relative;
    z-index: 10;
    width: 300px;
  }

  p {
    font-size: 1.4em;
    line-height: 1.5;
    position: relative;
    z-index: 10;
    width: 300px;
  }

  img {
    width: 95%;
    height: 100vh;
    margin: 0 0 1em;
    object-fit: cover;
    position: absolute;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    img {
      width: 100%;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }

    img {
      width: 100%;
      height: 100vh;
      object-fit: cover;
    }
  }
</style>
