---
import Logo from './Logo.astro'
import Nav from './Nav.astro'

const { current = '' } = Astro.props;
---

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding: 1em 2em;
    width: 100%;
    z-index: 2;
  }
</style>

<header>
  <Logo />
  <Nav current={current} />
</header>
